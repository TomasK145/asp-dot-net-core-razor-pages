@page "{id?}"
@*optional route variable --> pre moznost urcenia ci sa jedna o vytvorenie/update zaznamu*@
@model TopsyTurvyCakes.Pages.Admin.AddEditRecipeModel
@{
    ViewData["Title"] = Model.IsNewRecipe ? "New Recipe" : "Edit Recipe";
}
    @if (!ModelState.IsValid)
    {
        <div class="col-md-offset-2" col-md-10">
            <h3 class="text-danger">Validation Errors</h3>
            <div asp-validation-summary="All"></div> @*pridanie validation summary *@
            <hr/>
        </div>
    }

    <form method="post" class="form-horizontal" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Recipe.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Recipe.Name" class="form-control" /> @* asp-for tag helper umozni automaticke nastavenie typu, nazvu a aj hodnoty pre zadafinovanu property *@
                <span asp-validation-for="Recipe.Name"></span> @*validacna hlaska pre jeden field *@
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Recipe.Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea rows="3" asp-for="Recipe.Description" class="form-control"></textarea> @* asp-for tag helper umozni automaticke nastavenie typu, nazvu a hodnoty pre zadafinovanu property *@
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Recipe.Ingredients" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea rows="3" asp-for="Recipe.Ingredients" class="form-control"></textarea> @* asp-for tag helper umozni automaticke nastavenie typu, nazvu a hodnoty pre zadafinovanu property *@
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Recipe.Directions" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea rows="5" asp-for="Recipe.Directions" class="form-control"></textarea> @* asp-for tag helper umozni automaticke nastavenie typu, nazvu a hodnoty pre zadafinovanu property *@
            </div>
        </div>
        <label asp-for="Image" class="col-md-2 control-label"></label>
        <input type="file" asp-for="Image" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn btn-primary">Save</button>
                @if (!Model.IsNewRecipe)
                {
                    <button type="submit" asp-page-handler="Delete" class="btn btn btn-danger">Delete</button> @*definovanie tlacidla na moznost zmazania zaznamu *@
                }
            </div>
        </div>
    </form>
